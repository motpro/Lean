{% extends "::template.html.twig" %}

{% block title %}LeanAdminBundle:Adminlist:index{% endblock %}

{% block body %}
<h1>member list</h1>

<table class="table">
	<tr>
		<td>ID</td>
		<td></td>
		<td></td>
		<td></td>
		<td>最后登录</td>
	</tr>
	{% for member in list %}
	<tr>

		<td>{{member.id}}</td>
		<td>{{member.username}}</td>
		<td>{{member.email}}</td>
		<td>{% if member.locked == 1 %}
				<span class="label label-default">锁定</span>
			{% else %}
				<span class="label label-success">可用</span>
			{% endif %}
		</td>
		<td>{{member.lastLogin | date}}</td>
		
	</tr>
	{% endfor %}
</table>
{% endblock %}
