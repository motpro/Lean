{% extends "::template.html.twig" %}

{% block title %}查看{{contact.name}}资料{% endblock %}

{% block body %}
<script>
KindEditor.ready(function(K) {
    K.create('#content1', {
        themeType : 'default' , 
        height: '240px',
        width: '100%' ,
    });
});


</script>

<div class="container">
<div class="row">
    <div class="col-md-6">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">

                 {{contact.name}}的沟通记录

            </h3>
        </div>
        <div class="panel-body">
        <table class="table table-condensed">
        {% for one in list if one.recordText %}
            <tr>
                <td></td>
                <td class="col-md-3">{% if one.remindeddate %}{{one.remindeddate|date('Y-m-d h:i')}}{% endif %} | 
                {{one.date|date('Y-m-d h:i')}}
                </td>
            </tr>
            <tr>
                <td class="col-md-2">{{one.id}}</td>
                <td class="col-md-10">{{one.recordText}}</td>
            </tr>
        {% endfor %}
        </table>
        </div>

    </div>
    </div>

    <div class="col-md-6">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">添加新的沟通记录</h3>
        </div>
        <div class="panel-body">
            <form action="" method="post">
            <textarea id="content1" name="content" style="width:700px;height:200px;visibility:hidden;"></textarea>
            
            <div class="form-group">
                <label>时间</label>
                <input class="form-control" type="text" value="2012-05-15 21:05" id="datetimepicker">
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="button" value="更新" />
            </div>
            </form>
        </div>
    </div>
</div>

<hr/>

<div class="row">
    <div class="col-md-6">

        {% if account.uid %}

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">{{account.username}}的会员资料</h3>
            </div>
        <div class="panel-body">
            <ul class="list-group">
                <li class="list-group-item">
                    <div class="row"><div class="col-md-6">网站账号</div> <div class="col-md-6">{{account.username}}</div></div>
                </li>
                <li class="list-group-item">
                    <div class="row"><div class="col-md-6">邮箱</div> <div class="col-md-6">{{account.email}}</div></div>
                </li>
                <li class="list-group-item">Dapibus ac facilisis in</li>
                <li class="list-group-item">Morbi leo risus</li>
                <li class="list-group-item">Porta ac consectetur ac</li>
                <li class="list-group-item">Vestibulum at eros</li>
            </ul>
        </div>

        {% else %}

            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">他/她不是网站会员</h3>
                </div>
            </div>
        
        {% endif %}
    </div>

    <div class="col-md-6">
    </div>
</div>


</div>
{% endblock %}


{% block javascript %}
<script>
$('#datetimepicker').datetimepicker({
    format: 'yyyy-mm-dd hh:ii'
});
</script>
{% endblock %}